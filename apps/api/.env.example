# Example Environment Variables - Copy to .env and modify as needed

# Debug mode (true/false)
DEBUG=true

# Environment (development/production/docker)
ENVIRONMENT=development

# Database Configuration
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=ai_tutor

# Ollama Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_HOST=localhost:11434
OLLAMA_TIMEOUT=30

# Application Configuration
APP_NAME=AI Tutor API
APP_VERSION=1.0.0

# TTS Configuration
TTS_CACHE_DIR=static/audio
MAX_AUDIO_CACHE_SIZE=1000

# CORS Origins (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Additional Environment Variables for Docker
# For Docker deployment, use:
# MONGODB_URL=mongodb://mongodb:27017
# OLLAMA_HOST=host.docker.internal:11434
# ENVIRONMENT=docker