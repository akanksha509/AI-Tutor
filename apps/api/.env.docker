# Docker Environment Variables
DEBUG=true
ENVIRONMENT=docker

# Database (using Docker service names)
MONGODB_URL=mongodb://mongodb:27017
DATABASE_NAME=ai_tutor

# Ollama Configuration (using host.docker.internal for Docker Desktop)
OLLAMA_URL=http://host.docker.internal:11434
OLLAMA_HOST=host.docker.internal:11434

# Application Configuration
APP_NAME=AI Tutor API
APP_VERSION=1.0.0

# TTS Configuration
TTS_CACHE_DIR=static/audio
MAX_AUDIO_CACHE_SIZE=1000

# CORS Origins (comma-separated) - Include Docker network addresses
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://ai-tutor-app:3000,http://127.0.0.1:3000,http://0.0.0.0:3000

# Frontend API URL (for Docker environment)
VITE_API_URL=http://localhost:8000

# Ollama Timeout
OLLAMA_TIMEOUT=30