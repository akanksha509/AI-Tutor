{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ai-tutor/ui": ["packages/ui"],
      "@ai-tutor/hooks": ["packages/hooks"],
      "@ai-tutor/utils": ["packages/utils"],
      "@ai-tutor/types": ["packages/types"],
      "@ai-tutor/api-client": ["packages/api-client"],
      "@ai-tutor/tailwind-config": ["packages/config/tailwind"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
